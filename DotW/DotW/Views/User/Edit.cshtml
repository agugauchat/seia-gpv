@model DotW.Models.EditViewModel
@{
    ViewBag.Title = "Editar usuario";
    var rolesList = ViewBag.Roles as SelectList;
}

<h2>Editar la cuenta de usuario</h2>

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
            @Model.UserName
            @Html.HiddenFor(model => model.UserName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            @Model.Email
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.EmailConfirmed, new { @class = "control-label" })
            @if (Model.EmailConfirmed)
            {
                <span>Si</span>
            }
            else
            {
                <span>No</span>
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Roles, new { @class = "control-label" })
            <ul>
                @foreach (var role in Model.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rol, "Rol en el sitio", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Rol, rolesList, "Selecciona un rol", new { @class = "form-control" })
        </div>
    </div>
    <p>
        @Html.ActionLink("Volver a la lista", "Index", "User", null, new { @class = "btn btn-default" })
        <input type="submit" class="btn btn-success" value="Guardar" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

