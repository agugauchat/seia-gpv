
@{
    ViewBag.Title = "Resultados de Búsqueda";
    var postsList = ViewBag.PostsList as List<Entities.SearchEntities.PostsSearchResult>;
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <h3>Publicaciones que coinciden con su criterio de búsqueda.<h3>
            @if (postsList.Any())
            {
                foreach (var post in postsList)
                {
                    <h4><a href="@Url.Action("Details", "Post", new { id = post.Id })">@post.Title</a></h4>
                    <p><span class="glyphicon glyphicon-time"></span> Publicado el @post.EffectDate.ToString("dd/MM/yyyy") por <a href="@Url.Action("Details", "Profile", new { id = post.IdWriter })">@post.WriterUserName</a></p>
                    <p class="post-summary">@post.Summary</p>
                    <hr />
                }
            }
            else
            {
                <h1>No se han encontrado resultados. Intente con una búsqueda diferente</h1>
            }
        </div>
        <div class="col-md-4">
            <div class="well">
                <h4>Buscar en el sitio</h4>
                <div class="input-group">
                    <input id="searchInput" type="text" class="form-control">
                    <span class="input-group-btn">
                        <button id="searchText" class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- View JavaScript -->
    <script src="~/Scripts/Search/Searchs.js"></script>
}