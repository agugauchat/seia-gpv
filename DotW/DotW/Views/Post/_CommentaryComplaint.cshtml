@model DotW.Models.CommentaryComplaintViewModel

<div id="commentaryComplaintModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content row">
            <div class="modal-header custom-modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">Denunciar Comentario</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CommentaryComplaint", "Complaint", FormMethod.Post, new { @id = "commentaryComplaintForm", @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group" id="commentaryComplaintComment">
                        @Html.LabelFor(model => model.Commentary, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Commentary, new { @id = "commentaryComplaintTextArea", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" id="commentaryComplaintResult" style="display: none;">
                        <div class="col-md-12">
                            <p id="commentaryComplaintResultText"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.HiddenFor(model => model.CommentaryId, new { @id = "commentaryIdFormField" })
                            <input type="submit" id="commentaryComplaintSubmit" class="btn btn-success" value="Denunciar" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ActionLink("Listado de Publicaciones", "List", "Post", null, new { @id = "commentaryGoBackBtn", @class = "btn btn-success", @style = "display: none;" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
