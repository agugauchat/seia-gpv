<!DOCTYPE html>
@using Microsoft.AspNet.Identity
@{
    DotW.Models.ApplicationUser currentUser = ViewBag.CurrentUser as DotW.Models.ApplicationUser;
    List<string> currentRoles = ViewBag.RolesOfCurrentUser as List<string>;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Devs of the Web</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Devs of the Web", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (currentRoles.Contains("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrar <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Usuarios", "Index", "User")</li>
                                <li>@Html.ActionLink("Categorías", "Index", "Category")</li>
                            </ul>
                        </li>
                    }
                    <li>@Html.ActionLink("Categorías", "List", "Category")</li>
                    <li>@Html.ActionLink("Publicaciones", "List", "Post")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Mis Publicaciones", "Index", "Post")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12">
                    Esta página está disponible bajo la <a rel="license" href="http://creativecommons.org/licenses/by-nd/4.0/" target="_blank">licencia de Creative Commons Reconocimiento-SinObraDerivada 4.0 Internacional</a>.
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>